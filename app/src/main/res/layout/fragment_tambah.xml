<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahFragment"
    android:background="@color/whiteblurred"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pictop"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="-40dp"
                android:layout_marginLeft="200dp"
                android:src="@drawable/pictop" />
            <ImageView
                android:id="@+id/picleft"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:src="@drawable/pichomeleft" />
            <ImageView
                android:id="@+id/picright"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="380dp"
                android:src="@drawable/pichomeright" />

            <EditText
                android:id="@+id/formKode"
                android:layout_below="@+id/pic"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="15dp"
                android:background="@drawable/radius_formwhite"
                android:elevation="5dp"
                android:inputType="number"
                android:hint="Kd.Buku"
                android:fontFamily="@font/montserrat"
                android:textSize="14dp"
                android:textColor="#000" />
            <TextView
                android:id="@+id/judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:fontFamily="@font/poppinssemi"
                android:textColor="#000"
                android:textSize="28dp"
                android:text="Tambah Buku Baru" />

            <ImageView
                android:id="@+id/pic"
                android:layout_width="wrap_content"
                android:layout_height="190dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/picadd" />

            <EditText
                android:id="@+id/formJudul"
                android:layout_below="@id/pic"
                android:layout_toRightOf="@+id/formKode"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="15dp"
                android:background="@drawable/radius_formwhite"
                android:elevation="5dp"
                android:inputType="textPersonName"
                android:hint="Judul Buku"
                android:fontFamily="@font/montserrat"
                android:textSize="14dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/formPenerbit"
                android:layout_below="@+id/formJudul"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="15dp"
                android:background="@drawable/radius_formwhite"
                android:elevation="5dp"
                android:inputType="textPersonName"
                android:hint="Penerbit"
                android:fontFamily="@font/montserrat"
                android:textSize="14dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/formPembaca"
                android:layout_below="@+id/formPenerbit"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="15dp"
                android:background="@drawable/radius_formwhite"
                android:elevation="5dp"
                android:inputType="textPersonName"
                android:hint="Total Pembaca"
                android:fontFamily="@font/montserrat"
                android:textSize="14dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/formRating"
                android:layout_below="@id/formPenerbit"
                android:layout_toRightOf="@+id/formPembaca"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="15dp"
                android:background="@drawable/radius_formwhite"
                android:elevation="5dp"
                android:inputType="numberDecimal"
                android:fontFamily="@font/montserrat"
                android:hint="Rating/10"
                android:textSize="14dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/formDeskripsi"
                android:layout_below="@+id/formPembaca"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/radius_formwhite"
                android:elevation="5dp"
                android:inputType="textPersonName"
                android:hint="Deskripsi"
                android:fontFamily="@font/montserrat"
                android:textSize="14dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/formHarga"
                android:layout_below="@+id/formDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="15dp"
                android:background="@drawable/radius_formwhite"
                android:elevation="5dp"
                android:inputType="number"
                android:hint="Harga Buku"
                android:fontFamily="@font/montserrat"
                android:textSize="14dp"
                android:textColor="#000" />


            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                android:id="@+id/image_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/btnOpen"
                android:layout_below="@+id/formHarga"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_picimg"
                />

            <Button
                android:id="@+id/btnOpen"
                android:layout_below="@+id/formHarga"
                android:layout_width="245dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:paddingRight="15dp"
                android:drawableRight="@drawable/ic_image"
                android:textAllCaps="false"
                android:layout_marginLeft="30dp"
                android:alpha="0.90"
                android:layout_marginRight="30dp"
                android:background="@drawable/radius_formwhite"
                android:fontFamily="@font/poppins"
                android:textColor="@color/grey"
                android:text="Select Picture . . ." />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_below="@+id/image_profile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/radius_btnaksen"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:text="SAVE DATA BUKU" />

        </RelativeLayout>
    </ScrollView>
</FrameLayout>